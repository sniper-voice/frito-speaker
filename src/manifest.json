{
  "name": "フリトスピーカー",
  "description": "ボイコネのフリートークコメントを読み上げます",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["declarativeContent", "storage"],
  "content_scripts": [
    {
      "matches": ["https://stage.boikone.jp/free/stage/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
